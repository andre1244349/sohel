    <!-- Modal for Product Details -->
    <div id="productModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <img id="modalImage" src="" alt="Product Image">
            <h3 id="modalTitle">Product Name</h3>
            <p id="modalDescription">Product Description</p>
            <button class="buy-now" onclick="redirectToWhatsApp()">Buy Now</button>
        </div>
    </div>

    <script>
        // Redirect to WhatsApp when "Buy Now" button is clicked
        function redirectToWhatsApp() {
            const phoneNumber = '1234567890';  // Replace with your WhatsApp number
            const message = 'Hello, I am interested in purchasing this product!';
            const url = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;

            window.open(url, '_blank');
        }

        // Function to open the modal with product details
        function openModal(productId) {
            const products = [
                { id: 1, name: "Blue Jeans", price: "$49.99", description: "High-quality blue jeans made from comfortable fabric.", image: "https://via.placeholder.com/500" },
                { id: 2, name: "Casual T-shirt", price: "$19.99", description: "Stylish and comfortable casual T-shirt for everyday wear.", image: "https://via.placeholder.com/500" },
                { id: 3, name: "Leather Jacket", price: "$129.99", description: "Premium leather jacket with a modern design.", image: "https://via.placeholder.com/500" },
                { id: 4, name: "Summer Shorts", price: "$29.99", description: "Comfortable summer shorts in various colors.", image: "https://via.placeholder.com/500" },
                { id: 5, name: "Woolen Sweater", price: "$59.99", description: "Soft woolen sweater perfect for cold weather.", image: "https://via.placeholder.com/500" },
                { id: 6, name: "Casual Shoes", price: "$39.99", description: "Casual shoes with great comfort and style.", image: "https://via.placeholder.com/500" }
            ];

            const product = products.find(p => p.id === productId);

            document.getElementById("modalImage").src = product.image;
            document.getElementById("modalTitle").textContent = product.name;
            document.getElementById("modalDescription").textContent = `${product.description} Price: ${product.price}`;

            document.getElementById("productModal").style.display = "block";
        }

        // Function to close the modal
        function closeModal() {
            document.getElementById("productModal").style.display = "none";
        }
    </script>

